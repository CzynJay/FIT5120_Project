<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/account_label_layout"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:id="@+id/account_back"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:layout_margin="20dp"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="@string/account"
            android:transitionName="@string/account"
            android:textColor="@color/white"
            android:layout_marginStart= "30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/labelSize"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_below="@+id/account_label_layout"
        android:id="@+id/account_display"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:text="@string/display_name"
            />
        <EditText
            android:focusable="false"
            android:gravity="center"
            android:clickable="false"
            android:id="@+id/account_displayET"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
    </LinearLayout>

    <Button
        android:id="@+id/changePassword_bt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:layout_above="@id/logout_bt"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/logout_bt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        />
</RelativeLayout>